name:               tickle
version:            0.0.9
license:            BSD3
license-file:       LICENCE
author:             Tony Morris <ʇǝu˙sıɹɹoɯʇ@ןןǝʞsɐɥ>
maintainer:         Tony Morris
copyright:          Copyright (C) 2014,2015 NICTA Limited
copyright:          Copyright (c) 2016-2018 Commonwealth Scientific and Industrial Research Organisation (CSIRO)     ABN 41 687 119 230.
synopsis:           A port of @Data.Binary@
category:           Data
description:
  <<https://raw.githubusercontent.com/qfpl/assets/master/data61-transparent-bg.png>>
  .
  A port of @Data.Binary@ that tightens up data types and parameterises error messages
homepage:           https://github.com/qfpl/tickle
bug-reports:        https://github.com/qfpl/tickle/issues
cabal-version:      >= 1.10
build-type:         Custom
extra-source-files: changelog, etc/ATTRIBUTIONS

source-repository   head
  type:             git
  location:         git@github.com:qfpl/tickle.git

flag                small_base
  description:      Choose the new, split-up base package.

library
  default-language:
                    Haskell2010

  build-depends:
                    base >= 4.16 && < 5
                    , semigroups >= 0.8 && < 0.19
                    , semigroupoids >= 4.2 && < 5.4
                    , bifunctors >= 3.0 && < 5.6
                    , bytestring >= 0.10 && < 0.11
                    , transformers >= 0.3.0.0 && < 0.6
                    , mtl >= 2.1 && < 2.3
                    , validation >= 1 && < 1.1
                    , filepath >= 1.4 && < 1.5
                    , papa >= 0.3 && < 0.4

                    
  ghc-options:
                    -Wall

  default-extensions:
  
                    NoImplicitPrelude

  hs-source-dirs:
                    src

  exposed-modules:
                    Data.Tickle
                    Data.Tickle.Get
                    Data.Tickle.IsolateError
                    Data.Tickle.RunGetResult
             
test-suite          tests

  build-depends:      base >= 4.8 && < 5
                    , QuickCheck >= 2.9.2 && < 2.13
                    , checkers >= 0.4.6 && < 0.5
                    , lens >= 4.15 && < 4.18
                    , tasty >= 0.11 && < 1.2
                    , tasty-hunit >= 0.9 && < 0.11
                    , tasty-quickcheck >= 0.8.4 && < 0.11
                    , tickle

  type:             
                    exitcode-stdio-1.0

  main-is:          
                    Tests.hs

  hs-source-dirs:   
                    test

  default-language: 
                    Haskell2010

  ghc-options:       
                    -Wall
